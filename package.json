    "eslint-config-google": "^0.12.0",
    "express": "^4.16.4",
    "express-ws": "^4.0.0",
    "file-loader": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "morgan": "~1.9.0",
    "node-sass-middleware": "0.11.0",
    "serviceworker-webpack-plugin": "^1.0.1",
    "url-loader": "^1.1.2",
    "webpack": "^4.29.6"
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "babel-loader": "^8.0.5",
    "css-loader": "^2.1.1",
    "image-webpack-loader": "^4.6.0",
    "style-loader": "^0.23.1",
    "stylelint": "^10.0.0",
    "stylelint-config-recommended": "^2.2.0",
    "webpack-cli": "^3.3.0"
  }
